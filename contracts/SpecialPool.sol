contract SpecialPool is Ownable {
    using SafeMath for uint256;
    address public TOKEN;// = ""
    
    struct UserData {
        uint256 tokenQuantity;
        uint256 intialTimestamp;
        address user;
    } 
    UserData[] public userData;
    
    event Stake(
        address indexed userAddress,
        uint256 stakedAmount,
        uint256 Time
    );
    event UnStake(
        address indexed userAddress,
        uint256 unStakedAmount,
        uint256 Time
    );
    
    uint256 public ENTRY_RATE = 7.5E18;
    uint256 public DAYS30_RATE = 8E18;
    uint256 public YEAR_RATE = 10E18;
    uint256 public PENALTY = 1E18; 
    
    uint256 public REQUIRED_QUANITY;
    uint256 public totalStaking;
    
    constructor(uint256 _quantity, address _token) {
        REQUIRED_QUANITY = _quantity;
        TOKEN = _token;
    }
    
    modifier validateStake (uint256 _stakeid ) {
        require( _stakeid < userData.length, "Stake does not exists" ) ;
        _;
    }
     
    function stake(uint256 _quantity) external {
        require(IERC20(TOKEN).balanceOf(msg.sender) >= _quantity, "Insufficient Balance");
        require(_quantity >= REQUIRED_QUANITY, "Insufficient Balance");
        userData.push(UserData({
            tokenQuantity : _quantity,
            intialTimestamp : block.timestamp,
            user : msg.sender
        }));
        IERC20(TOKEN).transferFrom(msg.sender, address(this), _quantity);
        totalStaking = totalStaking.add(_quantity);
        emit Stake(msg.sender, _quantity, block.timestamp);
    }
    
    function unStake(uint256 stakeID) external validateStake(stakeID) {
        UserData storage stake = userData[stakeID];
        uint256 pendingReward = calculateRewards(stakeID);
        require(IERC20(TOKEN).balanceOf(address(this)) >= pendingReward, "Insufficient balance for reward");
        safeTokenTransfer(msg.sender, stake.tokenQuantity.add(pendingReward));
        totalStaking = totalStaking.sub(stake.tokenQuantity);
        emit UnStake(msg.sender, stake.tokenQuantity.add(pendingReward), block.timestamp);
    }
    
    function calculateRewards(uint256 stakeID) public view returns(uint256 reward) {
        UserData storage stake = userData[stakeID];
        uint256 time = block.timestamp.sub(stake.intialTimestamp);
        uint256 day = time.mod(1 days);
        // Reward within 30 days
        if(time < 30 days) {
            reward = (stake.tokenQuantity.mul(ENTRY_RATE))/100E18;
            reward = (reward.div(365)).mul(day);
            // 1% penalty 
            reward = reward.sub(reward.mul(PENALTY).div(100E18));
        }
        // Reward after 30 days
        if(time > 30 days && time < 90 days) {
            reward = (stake.tokenQuantity.mul(DAYS30_RATE))/100E18;
            reward = (reward.div(365)).mul(day);
        }
        // Reward after 1 year
        if(time > 90 days) {
            reward = (stake.tokenQuantity.mul(YEAR_RATE))/100E18;
            reward = (reward.div(365)).mul(day);
        }
    }
    
    function safeTokenTransfer(address staker, uint256 amount) internal {
        uint256 TokenBal = IERC20(TOKEN).balanceOf(address(this));
        if (amount > TokenBal) {
           IERC20(TOKEN).transfer(staker, amount);
        } else {
            IERC20(TOKEN).transfer(staker, amount);
        }
    }
    
    // Safe Rigel withdraw function by admin
    function safeRigelWithdraw(address _to, uint256 _amount) onlyOwner external {
        uint256 rigelBalalance = IERC20(TOKEN).balanceOf(address(this));
        if (_amount > rigelBalalance) {
            IERC20(TOKEN).transfer(_to, rigelBalalance);
        } else {
            IERC20(TOKEN).transfer(_to, _amount);
        }
    }
}